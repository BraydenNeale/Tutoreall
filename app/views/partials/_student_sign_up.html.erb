<div class="signup_popup" id="signup_popup_1">
  <div class="signup_popup_inn">
    <%= form_for(resource(1), :as => resource_name(1), :html => {:id => 'register_form'}, 
      :url => student_registration_path, :remote => :true, :format => :json) do |f| %>
      <h2>Student / Parent sign up</h2>
      <div class="row">
        <div class="col-sm-6 col-xs-12">
             <%= f.text_field :firstname, class: "form-control input-lg input-lg-custom", placeholder: "First name", required: true %>
          </div>
          <div class="col-sm-6 col-xs-12">
            <%= f.text_field :lastname, class: "form-control input-lg input-lg-custom", placeholder: "Surname", required: true %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-xs-12">
             <%= f.email_field :email, class: "form-control input-lg input-lg-custom", placeholder: "Email", required: true %>
        </div>
        <div class="col-sm-6 col-xs-12">
            <input type="text" class="form-control input-lg input-lg-custom" id="email2" placeholder="Confirm Email">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-xs-12">
            <% if false %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            <% end %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-lg input-lg-custom", required: true %>
          </div>
          <div class="col-sm-6 col-xs-12">    
             <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control input-lg input-lg-custom", required: true %>
          </div>
      </div>
      <div class="clearfix">
        <!-- <div class="social">
              <a href="#"><img src="../../assets/layout/facebook.png" alt=""></a>
              <a href="#"><img src="../../assets/layout/google_plus.png" alt=""></a>
          </div> -->
          <div class="social">
            <%= link_to "Forgot your password?", new_password_path(resource_name(1)) %>
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name(1)) %>
          </div>
           <%= f.submit "SIGN UP", class: "signup_btn" %>
      </div>
    <% end %>
  </div>
  <div class="curve_1"><img src="../../assets/layout/popup_curve_1.png" alt=""></div>
</div>