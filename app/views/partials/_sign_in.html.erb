<!-- _sign_in.html.erb -->
<div class="signin_popup" id="signin_popup">
  <div class="signin_popup_inn">
      <h2>Sign in</h2>
      <hr>
      <div class="clearfix">
        <h2>Tutor</h2>
        <div class="row">
          <%= form_for(resource(0), as: resource_name(0), :html => {:id => 'login_tutor'}, :url => tutor_session_path, 
            :remote => :true, :format => :json) do |f| %>
            <div class="col-xl-4 col-lg-4">
              <%= f.email_field :email, :placeholder => "email", 
                class: "form-control input-lg input-lg-custom", required: true %>
            </div>
            <div class="col-xl-4 col-lg-4">
              <%= f.password_field :password, :placeholder => "password", 
              class: "form-control input-lg input-lg-custom", required: true %>
            </div>
            <div class="col-xl-2 checkbox col-lg-2">
              <% if devise_mapping(0).rememberable? %>
                <label for=""><%= f.check_box :remember_me, class: "chkbox" %>Remember me</label>
              <% end -%>
            </div>
            <div class="col-xl-2 col-lg-2">
              <%= f.submit "LOG IN", class: "login_btn" %>
            </div>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="clearfix">
      <h2>Student</h2>
      <div class="row">
        <%= form_for(resource(1), as: resource_name(1), :html => {:id => 'login_tutor'}, :url => tutor_session_path, 
          :remote => :true, :format => :json) do |f| %>
          <div class="col-xl-4 col-lg-4">
            <%= f.email_field :email, :placeholder => "email", 
              class: "form-control input-lg input-lg-custom", required: true %>
          </div>
          <div class="col-xl-4 col-lg-4">
            <%= f.password_field :password, :placeholder => "password", 
            class: "form-control input-lg input-lg-custom", required: true %>
          </div>
          <div class="col-xl-2 checkbox col-lg-2">
            <% if devise_mapping(1).rememberable? %>
              <label for=""><%= f.check_box :remember_me, class: "chkbox" %>Remember me</label>
            <% end -%>
          </div>
          <div class="col-xl-2 col-lg-2">
            <%= f.submit "LOG IN", class: "login_btn" %>
          </div>
        <% end %>
        </div>
      </div>
      <hr>

<!--       <div class="social">
          <a href="#"><img src="../../assets/layout/facebook.png" alt=""></a>
          <a href="#"><img src="../../assets/layout/google_plus.png" alt=""></a>
      </div> -->
      <div class="center_txt">
          <h2>Are you a student?<a href="#signup_popup_1" class="fancybox signup_btn">SIGN UP</a></h2>
          <h2>Are you a tutor?<a href="#signup_popup_2" class="fancybox signup_btn">SIGN UP</a></h2>
      </div>
  </div>
  <div class="curve_1"><img src="../../assets/layout/popup_curve_1.png" alt=""></div>
</div>