<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <% if false %>
    <div class="block block_1">
      <%= f.label :firstname %>
      <%= f.text_field :firstname, autofocus: true, class: "txtbox_1", placeholder: "Firstname" %>
    </div>

     <div class="block">
     <%= f.label :lastname %>
      <%= f.text_field :lastname, class: "txtbox_1", placeholder: "Lastname" %>
    </div>
  <% end %>
  
  <div class="block">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "txtbox_1", placeholder: "Email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="block">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off", class: "txtbox_1" %>
  </div>

  <div class="block">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "txtbox_1" %>
  </div>

  <div class="block">
    <%= f.label :current_password %> <i>(needed to confirm changes)</i>
    <%= f.password_field :current_password, autocomplete: "off", class: "txtbox_1" %>
  </div>

  <div class="block">
    <%= f.submit "Update", class: "login_btn"  %>
  </div>
<% end %>
</div>
</div>

<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
    <div class="block block_1">
      <h3>Cancel my account</h3>
    </div>

    <div class="block">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn_1" %>
    </div>
  </div>
</div>

<%= link_to "Back", :back %>