<div class="row">
  <div class="col-lg-12">
    <%= devise_error_messages! %>
    <h4>Log in</h4>
  </div>
</div>

<div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html: { role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-lg-4">
        <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
      </div>
      <div class="col-lg-4">
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="col-lg-3 checkbox">
          <label for=""><%= f.check_box :remember_me, class: "chkbox" %>Remember me</label>
         </div>
        <div class="col-lg-1">
          <%= f.submit "Log in", class: "btn btn-info btn-lg" %>
        </div>
      <% else %>
        <div class="col-lg-4">
          <%= f.submit "Log in", class: "btn btn-info btn-lg" %>
        </div>
      <% end -%>
    </div>
  <% end %>
</div>
<hr>

<div class="row">
  <div class="col-lg-12">
     <%= render "tutors/shared/links" %>
  </div>
</div>

