<div class="row">
  <div class="col-lg-12">
    <%= devise_error_messages! %>
    <h4>Resend confirmation instructions</h4>
  </div>
</div>

<div class="row">
  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name),
    html: { method: :post, role: "form" }) do |f| %>
    <div class="form-group">
      <div class="col-lg-9">
        <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control input-lg", placeholder: "Email" %> 
      </div>
      <div class="col-lg-3">
        <%= f.submit "Resend confirmation instructions", class: "btn btn-info btn-lg" %>
      </div>
    </div>
  <% end %>
</div>
<hr>

<div class="row">
  <div class="col-lg-12">
     <%= render "tutors/shared/links" %>
  </div>
</div>
