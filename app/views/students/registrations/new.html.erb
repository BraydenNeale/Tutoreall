<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="block block_1">
        <h3>Student Sign up</h3>
      </div>
      <div class="block">
        <%= f.text_field :firstname, class: "txtbox_1", placeholder: "Firstname" %>
      </div>

       <div class="block">
        <%= f.text_field :lastname, class: "txtbox_1", placeholder: "Lastname" %>
      </div>
      
      <div class="block">
        <%= f.email_field :email, class: "txtbox_1", placeholder: "Email" %>
      </div>

      <div class="block">
        <%# if @minimum_password_length %>
        <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
        <%# end %>
        <%= f.password_field :password, autocomplete: "off", class: "txtbox_1", placeholder: "Password" %>
      </div>

      <div class="block">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "txtbox_1", placeholder: "Confirm Password" %>
      </div>

      <div class="block">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <div class="block">
      <%= render "students/shared/links" %>
    </div>
  </div>
</div>
