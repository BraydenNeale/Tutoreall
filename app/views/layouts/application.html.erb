<!DOCTYPE html>
<html>
<head>
  <title>Tutoreall</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
	<% if user_signed_in %>
		<li>
			<%= link_to current_user.email, tutor_path(current_tutor) %>
		</li>
		<li>
			<%#= link_to "Log Out", destroy_tutor_session_path, :method => :delete %>
			<%#= link_to "Log Out", :controller => "application", :action => "sign_out"%>
			<%#= link_to "Log Out", sign_out_and_redirect(current_user) %>
			<% if is_tutor %>
				<%= link_to "Log Out", destroy_tutor_session_path, :method => :delete %>
			<% else %>
				<%= link_to "Log Out", destroy_student_session_path, :method => :delete %>
			<% end %>
		</li>
	<% else %>
		<li>
			<%= link_to "Tutor sign up", new_tutor_registration_path %>
		</li>
		<li>
			<%= link_to "Tutor log in", new_tutor_session_path %>
		</li>
		<li>
			<%= link_to "Student sign up", new_student_registration_path %>
		</li>
		<li>
			<%= link_to "Student log in", new_student_session_path %>
		</li>
	<% end %>

</header>

<%= yield %>

</body>
</html>
